<Window x:Class="OpenJPDF.Views.AdvancedBackgroundRemovalDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Advanced Background Removal" 
        Height="700" Width="1000"
        WindowStartupLocation="CenterOwner"
        Background="#1E1E1E">
    
    <Window.Resources>
        <Style x:Key="ToolButton" TargetType="RadioButton">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="RadioButton">
                        <Border x:Name="border" 
                                Background="#2D2D2D" 
                                BorderBrush="#3D3D3D" 
                                BorderThickness="1" 
                                CornerRadius="4"
                                Padding="12,8"
                                Cursor="Hand">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#0078D4"/>
                                <Setter TargetName="border" Property="BorderBrush" Value="#0078D4"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#3D3D3D"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="12"/>
        </Style>
        
        <Style x:Key="ActionButton" TargetType="Button">
            <Setter Property="Background" Value="#2D2D2D"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#3D3D3D"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="16,8"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" 
                                Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}" 
                                CornerRadius="4"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#3D3D3D"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#4D4D4D"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <Style x:Key="PrimaryButton" TargetType="Button" BasedOn="{StaticResource ActionButton}">
            <Setter Property="Background" Value="#0078D4"/>
            <Setter Property="BorderBrush" Value="#0078D4"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#1084D8"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>
    
    <Grid Margin="16">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="220"/>
        </Grid.ColumnDefinitions>
        
        <!-- Image Canvas Area -->
        <Border Grid.Column="0" Background="#252525" CornerRadius="8" Margin="0,0,16,0">
            <Grid>
                <!-- Checkerboard background for transparency -->
                <Rectangle>
                    <Rectangle.Fill>
                        <DrawingBrush TileMode="Tile" Viewport="0,0,16,16" ViewportUnits="Absolute">
                            <DrawingBrush.Drawing>
                                <DrawingGroup>
                                    <GeometryDrawing Brush="#353535">
                                        <GeometryDrawing.Geometry>
                                            <RectangleGeometry Rect="0,0,16,16"/>
                                        </GeometryDrawing.Geometry>
                                    </GeometryDrawing>
                                    <GeometryDrawing Brush="#2A2A2A">
                                        <GeometryDrawing.Geometry>
                                            <GeometryGroup>
                                                <RectangleGeometry Rect="0,0,8,8"/>
                                                <RectangleGeometry Rect="8,8,8,8"/>
                                            </GeometryGroup>
                                        </GeometryDrawing.Geometry>
                                    </GeometryDrawing>
                                </DrawingGroup>
                            </DrawingBrush.Drawing>
                        </DrawingBrush>
                    </Rectangle.Fill>
                </Rectangle>
                
                <ScrollViewer x:Name="ImageScrollViewer" 
                              HorizontalScrollBarVisibility="Auto" 
                              VerticalScrollBarVisibility="Auto"
                              PanningMode="Both">
                    <Canvas x:Name="ImageCanvas" 
                            ClipToBounds="True"
                            Background="Transparent"
                            MouseLeftButtonDown="ImageCanvas_MouseLeftButtonDown"
                            MouseMove="ImageCanvas_MouseMove"
                            MouseLeftButtonUp="ImageCanvas_MouseLeftButtonUp"
                            MouseLeave="ImageCanvas_MouseLeave"
                            MouseWheel="ImageCanvas_MouseWheel">
                        <Canvas.LayoutTransform>
                            <ScaleTransform x:Name="CanvasScale" ScaleX="1" ScaleY="1"/>
                        </Canvas.LayoutTransform>
                        <!-- Original Image -->
                        <Image x:Name="SourceImage" Stretch="None"/>
                        <!-- Mask Overlay -->
                        <Image x:Name="MaskOverlay" Stretch="None" Opacity="0.5"/>
                        <!-- Brush Cursor Preview -->
                        <Ellipse x:Name="BrushCursor" 
                                 Stroke="#FFFFFF" 
                                 StrokeThickness="2" 
                                 Fill="Transparent"
                                 IsHitTestVisible="False"
                                 Visibility="Collapsed"/>
                    </Canvas>
                </ScrollViewer>
                
                <!-- Zoom controls overlay -->
                <StackPanel Orientation="Horizontal" 
                            HorizontalAlignment="Right" 
                            VerticalAlignment="Top" 
                            Margin="8">
                    <Button x:Name="ZoomOutButton" Content="-" Width="28" Height="28" 
                            Click="ZoomOutButton_Click" Style="{StaticResource ActionButton}" 
                            Padding="0" FontSize="16" FontWeight="Bold"/>
                    <TextBlock x:Name="ZoomLevelText" Text="100%" Foreground="White" 
                               VerticalAlignment="Center" Margin="8,0" MinWidth="40" TextAlignment="Center"/>
                    <Button x:Name="ZoomInButton" Content="+" Width="28" Height="28" 
                            Click="ZoomInButton_Click" Style="{StaticResource ActionButton}" 
                            Padding="0" FontSize="16" FontWeight="Bold"/>
                    <Button x:Name="ZoomFitButton" Content="Fit" Width="36" Height="28" 
                            Click="ZoomFitButton_Click" Style="{StaticResource ActionButton}" 
                            Padding="4,0" FontSize="11" Margin="4,0,0,0"/>
                </StackPanel>
                
                <!-- Instructions overlay -->
                <TextBlock x:Name="InstructionsText"
                           Text="Use brush to mark areas to KEEP (green) or REMOVE (red). Scroll wheel to zoom."
                           Foreground="#888888"
                           FontSize="14"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Bottom"
                           Margin="0,0,0,16"/>
            </Grid>
        </Border>
        
        <!-- Tools Panel -->
        <StackPanel Grid.Column="1">
            <!-- Brush Mode -->
            <TextBlock Text="Brush Mode" Foreground="#AAAAAA" FontSize="12" Margin="0,0,0,8"/>
            <StackPanel Orientation="Horizontal" Margin="0,0,0,16">
                <RadioButton x:Name="KeepModeRadio" 
                             Content="Keep" 
                             Style="{StaticResource ToolButton}"
                             IsChecked="True"
                             GroupName="BrushMode"
                             Margin="0,0,8,0"/>
                <RadioButton x:Name="RemoveModeRadio" 
                             Content="Remove" 
                             Style="{StaticResource ToolButton}"
                             GroupName="BrushMode"/>
            </StackPanel>
            
            <!-- Brush Size -->
            <TextBlock Text="Brush Size" Foreground="#AAAAAA" FontSize="12" Margin="0,0,0,8"/>
            <Grid Margin="0,0,0,16">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="40"/>
                </Grid.ColumnDefinitions>
                <Slider x:Name="BrushSizeSlider" 
                        Minimum="5" Maximum="100" Value="30"
                        VerticalAlignment="Center"
                        ValueChanged="BrushSizeSlider_ValueChanged"/>
                <TextBlock Grid.Column="1" 
                           Text="{Binding ElementName=BrushSizeSlider, Path=Value, StringFormat={}{0:0}}"
                           Foreground="White"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Right"/>
            </Grid>
            
            <Separator Background="#3D3D3D" Margin="0,0,0,16"/>
            
            <!-- Quick Actions -->
            <TextBlock Text="Quick Actions" Foreground="#AAAAAA" FontSize="12" Margin="0,0,0,8"/>
            <Button x:Name="AutoDetectButton" 
                    Content="AI Auto-Detect" 
                    Style="{StaticResource ActionButton}"
                    Click="AutoDetectButton_Click"
                    Margin="0,0,0,8"/>
            <Button x:Name="InvertMaskButton" 
                    Content="Invert Mask" 
                    Style="{StaticResource ActionButton}"
                    Click="InvertMaskButton_Click"
                    Margin="0,0,0,8"/>
            <Button x:Name="ClearMaskButton" 
                    Content="Clear All" 
                    Style="{StaticResource ActionButton}"
                    Click="ClearMaskButton_Click"
                    Margin="0,0,0,16"/>
            
            <Separator Background="#3D3D3D" Margin="0,0,0,16"/>
            
            <!-- Preview -->
            <TextBlock Text="Preview" Foreground="#AAAAAA" FontSize="12" Margin="0,0,0,8"/>
            <CheckBox x:Name="ShowPreviewCheckbox"
                      Content="Show result preview"
                      Foreground="White"
                      IsChecked="False"
                      Checked="ShowPreviewCheckbox_Changed"
                      Unchecked="ShowPreviewCheckbox_Changed"
                      Margin="0,0,0,16"/>
            
            <!-- Spacer -->
            <Grid Height="50"/>
            
            <!-- Bottom Actions -->
            <Button Content="Apply" 
                    Style="{StaticResource PrimaryButton}"
                    Click="ApplyButton_Click"
                    Margin="0,0,0,8"/>
            <Button Content="Cancel" 
                    Style="{StaticResource ActionButton}"
                    Click="CancelButton_Click"/>
            
            <!-- Status -->
            <TextBlock x:Name="StatusText"
                       Text=""
                       Foreground="#888888"
                       FontSize="11"
                       TextWrapping="Wrap"
                       Margin="0,16,0,0"/>
        </StackPanel>
    </Grid>
</Window>
