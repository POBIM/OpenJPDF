<Window x:Class="OpenJPDF.Views.ImageSizeDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Image Position and Size" 
        Height="280" Width="350"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        ShowInTaskbar="False">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <TextBlock Grid.Row="0" Grid.ColumnSpan="2" Text="Set image position and size:" 
                   FontWeight="SemiBold" Margin="0,0,0,16"/>

        <TextBlock Grid.Row="1" Grid.Column="0" Text="X Position:" VerticalAlignment="Center" Margin="0,0,12,8"/>
        <TextBox Grid.Row="1" Grid.Column="1" x:Name="XInput" Text="50" Margin="0,0,0,8"/>

        <TextBlock Grid.Row="2" Grid.Column="0" Text="Y Position:" VerticalAlignment="Center" Margin="0,0,12,8"/>
        <TextBox Grid.Row="2" Grid.Column="1" x:Name="YInput" Text="50" Margin="0,0,0,8"/>

        <TextBlock Grid.Row="3" Grid.Column="0" Text="Width:" VerticalAlignment="Center" Margin="0,0,12,8"/>
        <TextBox Grid.Row="3" Grid.Column="1" x:Name="WidthInput" Text="200" Margin="0,0,0,8"/>

        <TextBlock Grid.Row="4" Grid.Column="0" Text="Height:" VerticalAlignment="Center" Margin="0,0,12,8"/>
        <TextBox Grid.Row="4" Grid.Column="1" x:Name="HeightInput" Text="200" Margin="0,0,0,8"/>

        <StackPanel Grid.Row="6" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Cancel" Width="80" Margin="0,0,8,0" Click="Cancel_Click"/>
            <Button Content="OK" Width="80" Click="OK_Click" IsDefault="True"/>
        </StackPanel>
    </Grid>
</Window>
